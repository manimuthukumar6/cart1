{
  "extends": "airbnb",
  "ecmaFeatures": {
    "generators": true
  },
  "rules": {
    "max-len": [2, 120, 4],
    "generator-star-spacing": [2, {"before": false, "after": true}],
    "comma-dangle": [2, "never"],
    "no-confusing-arrow": 0,
    "global-require": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}
